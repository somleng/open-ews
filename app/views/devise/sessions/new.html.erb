<div class="card card-md">
  <div class="card-body">
    <h2 class="h2 text-center mb-4"><%= translate(:"titles.user_sessions.new") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false }, novalidate: true, autocomplete: "off" }) do |f| %>
      <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: {
                autocomplete: "email",
              } %>

      <%= f.input :password,
              required: false,
              input_html: {
                autocomplete: "current-password",
              } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-footer">
        <div class="row">
          <div class="col">
            <%= f.button :submit, translate(:"titles.user_sessions.create"), class: "px-4" %>
          </div>

          <div class="col text-end">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
